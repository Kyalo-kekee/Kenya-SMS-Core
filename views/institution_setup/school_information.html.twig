{% extends 'base.html.twig' %}
{% block page_level_css %}
    <link rel="stylesheet" type="text/css" href="{{ asset('theme/plugins/table/datatable/datatables.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('theme/plugins/table/datatable/datatables.css') }}">
{% endblock %}
{% block title %}School Information!{% endblock %}
{% block page_title %}School Information{% endblock %}
{% block body %}
    <div class="row layout-top-spacing" id="cancel-row">

        <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
            <div class="widget-content widget-content-area br-6">
                <div class="col-1 pull-right p-2" style="right: -90%">
                    <a id="" class="btn btn-dark mb-2 mr-2 rounded-circle" href="{{ path('app_school_edit_school_information', {'action': 'add', 'id': ''}) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="feather feather-plus">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                    </a>
                </div>
                <table id="zero-config" class="table table-striped" style="width:100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Initials</th>
                        <th>Cellphone1</th>
                        <th>Email</th>
                        <th>City</th>
                        <th>No of levels (classes)</th>
                        <th>No of streams (per class)</th>
                        <th class="no-content">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for model in schools %}
                        <tr>
                            <td>{{ model.Name }} </td>
                            <td>{{ model.IDInitials}}</td>
                            <td>{{ model.CellPhone1 }}</td>
                            <td>{{ model.Email}}</td>
                            <td>{{ model.City}}</td>
                            <td>{{ model.NoOfLevels}}</td>
                            <td>{{ model.NoOfStreamsPerLevel}}</td>
                            <td>
                                <a href="{{ path('app_school_edit_school_information', {'action': 'edit', 'id': model.id}) }}">edit</a>
                                <a>delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
